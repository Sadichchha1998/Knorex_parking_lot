package com.masai.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.masai.exdeption.StudetException;
import com.masai.model.Student;
import com.masai.repository.StudentRepository;

@Service
public class studentServiceImpl  implements StudentService{
   @Autowired
	private StudentRepository studentrepo;
	@Override
	public Student regiterStudent(Student student) throws StudetException {
	
   return studentrepo.save(student);
  
	}
	@Override
	public List<Student> getAllStudent(Student student) throws StudetException {
	
	List<Student> liStudent	= studentrepo.findAll();
	return liStudent;
	}
	@Override
	public Optional<Student> deleteStudent( Integer id) throws StudetException {
	   Optional<Student> stu=  studentrepo.deleteAllById(id);
	   if(stu.isPresent()) {
		   
	   }else {
		   throw new StudetException("Student of this id not found");
	   }
	}

}
